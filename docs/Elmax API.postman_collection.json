							"let resdata = pm.response.json();\r",
							"// Look for the online device\r",
							"let targetdev=null;\r",
							"for (let i=0;i<resdata.length;i++) {\r",
							"    let centrale = resdata[i];\r",
							"    if (centrale[\"centrale_online\"]) {\r",
							"        pm.environment.set(\"centrale\", centrale[\"hash\"]);\r",
							"        break;\r",
